<style>
  section h3 {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-primary);
    margin-top: 1.8rem;
    margin-bottom: 0.5rem;
    letter-spacing: 0.01em;
    text-align: center;
  }
  section {
    font-size: 0.91rem;
    margin-bottom: 4rem;
    text-align: center;
  }
  section div {
    padding-left: 2rem;
    padding-right: 2rem;
  }
  section h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-top: 2.2rem;
    margin-bottom: 1rem;
    letter-spacing: 0.01em;
    text-align: center;
  }

  section div lite-youtube {
    margin-left: auto;
    margin-right: auto;
  }

  section ul {
    list-style-type: square;
    padding-left: 2rem;
    margin-bottom: 1.5rem;
  }
  section ul li {
    color: inherit;
    font-size: 0.97rem;
  }
  section ul li::marker {
    color: var(--color-secondary);
  }
  section ul ul {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
    padding-left: 1.5rem;
  }
  section ul li strong {
    color: var(--color-primary);
  }

  section p {
    margin-bottom: 1.2rem;
    line-height: 1.6;
    text-align: left;
  }

  #links a {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    text-decoration: none;
    transition: all 0.3s;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
  }

  #links a.button {
    color: white;
    background: linear-gradient(135deg, var(--color-primary) 0%, #003d82 100%);
    box-shadow: 0 4px 15px rgba(0, 85, 164, 0.4);
  }

  #links a.button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 85, 164, 0.6);
  }

  #links a.button.secondary {
    background: linear-gradient(135deg, #ef4135 0%, #c7362d 100%);
    box-shadow: 0 4px 15px rgba(239, 65, 53, 0.4);
  }

  #links a.button.secondary:hover {
    box-shadow: 0 6px 20px rgba(239, 65, 53, 0.6);
  }
</style>
