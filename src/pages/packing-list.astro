  </div>
</Layout>

<script>
  if (typeof window !== "undefined") {
    const ids = [
      ...Array.from({ length: 14 }, (_, i) => `clothing${i + 1}`),
      ...Array.from({ length: 6 }, (_, i) => `sleep${i + 1}`),
      ...Array.from({ length: 13 }, (_, i) => `toiletries${i + 1}`),
      ...Array.from({ length: 14 }, (_, i) => `other${i + 1}`),
    ];
    ids.forEach((id) => {
      const el = document.getElementById(id);
      if (el && el instanceof HTMLInputElement) {
        // Restore state
        el.checked = sessionStorage.getItem(id) === "true";
        // Save state on change
        el.addEventListener("change", () => {
          sessionStorage.setItem(id, el.checked.toString());
        });
      }
    });
  }
</script>

<style>
  .packing-list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .packing-list li {
    border-radius: 0.5rem;
    transition: background 0.2s;
  }
  .packing-list li:hover {
    font-weight: bold;
    color: var(--color-primary);
  }
  .packing-list input[type="checkbox"] {
    accent-color: var(--color-primary);
    width: 1.25rem;
    height: 1.25rem;
    margin-right: 0.5rem;
    vertical-align: middle;
  }
  .packing-list label {
    font-size: 1rem;
    line-height: 1.5;
    cursor: pointer;
    user-select: none;
  }
  @media (max-width: 768px) {
    .packing-list label {
      font-size: 0.95rem;
    }
    .packing-list input[type="checkbox"] {
      width: 1rem;
      height: 1rem;
    }
  }
</style>
