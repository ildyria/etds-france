---
import Layout from "../layouts/Layout.astro";
import BackgroundImage from "../components/BackgroundImage.astro";
import Hero from "../components/Hero.astro";
import List from "../components/packing/List.astro";
import Item from "../components/packing/Item.astro";
import H2 from "../components/H2.astro";
---

<Layout>
  <div class="container mx-auto">
    <BackgroundImage />

    <main>
    <Hero title="Liste de bagages" />

      <section class="max-w-4xl mx-auto bg-white rounded-lg shadow p-6">
        <p class="mb-4 text-gray-700 text-base md:text-lg text-center px-4 md:px-0">
          Que faut-il emporter pour le week&#8209;end&nbsp;: n'oubliez rien pour ne rien
          regretter !<br />
          C'est interactif, vous pouvez cocher chaque case pour marquer ce que vous
          avez déjà préparé !
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <H2>Vêtements</H2>
            <List>
                <Item id="clothing1"
                 label="Tenue pour la compétition Standard"
                />
                <Item id="clothing2"
                 label="Chaussures pour le Standard"
                />
                <Item id="clothing3"
                 label="Tenue pour la compétition Latine"
                />
                <Item id="clothing4"
                 label="Chaussures pour le Latin"
                />
                <Item id="clothing5"
                 label="Protège-talons (pour les dames)"
                />
                <Item id="clothing6"
                 label="Tenue pour danser le vendredi soir"
                />
                <Item id="clothing7"
                 label="Tenue sur le thème"
                />
                <Item id="clothing8"
                 label="Tenue de soirée"
                />
                <Item id="clothing9"
                 label="Pyjama"
                />
                <Item id="clothing10"
                 label="Sous-vêtements, soutien-gorge"
                />
                <Item id="clothing11"
                 label="Chaussettes/culottes"
                />
                <Item id="clothing12"
                 label="Tenue décontractée pour encourager vos coéquipiers"
                />
                <Item id="clothing13"
                 label="Tenue normale si vous voulez sortir en ville"
                />
                <Item id="clothing14"
                 label="Chaussons, tongs, mocassins, tout ce qui est confortable"
                />
            </List>

            <H2>
              Affaires pour dormir
            </H2>
            <List>
                <Item id="sleep1"
                 label="Matelas gonflable"
                />
                <Item id="sleep2"
                 label="Pompe pour matelas gonflable"
                />
                <Item id="sleep3"
                 label="Sac de couchage ou couverture"
                />
                <Item id="sleep4"
                 label="Oreiller"
                />
                <Item id="sleep5"
                 label="Bouchons d'oreilles"
                />
                <Item id="sleep6"
                 label="Masque de nuit"
                />
            </List>
          </div>
          <div>
            <H2>
              Affaires de toilette
            </H2>
            <List>
                <Item id="toiletries1"
                 label="Serviette(s)"
                />
                <Item id="toiletries2"
                 label="Gel douche, shampoing, après-shampoing"
                />
                <Item id="toiletries3"
                 label="Déodorant"
                />
                <Item id="toiletries4"
                 label="Brosse à dents"
                />
                <Item id="toiletries5"
                 label="Dentifrice"
                />
                <Item id="toiletries6"
                 label="Lunettes/lentilles (n'oubliez pas le liquide)"
                />
                <Item id="toiletries7"
                 label="Brosse à cheveux"
                />
                <Item id="toiletries8"
                 label="Gel/laque/autres produits pour coiffer vos cheveux"
                />
                <Item id="toiletries9"
                 label="Maquillage"
                />
                <Item id="toiletries10"
                 label="Démaquillant"
                />
                <Item id="toiletries11"
                 label="Kit de rasage"
                />
                <Item id="toiletries12"
                 label="Miroir"
                />
                <Item id="toiletries13"
                 label="Médicaments (n'oubliez pas les pansements pour ampoules)"
                />
            </List>

            <H2>Autre</H2>
            <List>
                <Item id="other1"
                 label="Assiette, tasse, bol pour la soupe (compatible lave-vaisselle)"
                />
                <Item id="other2"
                 label="Couverts : cuillère, fourchette, couteau (compatible lave-vaisselle)"
                />
                <Item id="other3"
                 label="Mug à thé ou café (compatible lave-vaisselle)"
                />
                <Item id="other4"
                 label="Carte bancaire (pour les boissons)"
                />
                <Item id="other5"
                 label="Carte d'identité ou passeport"
                />
                <Item id="other6"
                 label="Carte étudiante (avec justificatif d'inscription)"
                />
                <Item id="other7"
                 label="Téléphone"
                />
                <Item id="other8"
                 label="Chargeur de téléphone"
                />
                <Item id="other9"
                 label="Rallonge électrique (optionnel)"
                />
                <Item id="other10"
                 label="Matériel pour encourager l'équipe"
                />
                <Item id="other11"
                 label="Appareil photo"
                />
                <Item id="other12"
                 label="Lampe de poche"
                />
                <Item id="other13"
                 label="Bonne humeur, énergie et enthousiasme débordant !"
                />
                <Item id="other14"
                 label="Brosse pour vos chaussures de danse"
                />
            </List>
          </div>
        </div>
      </section>
    </main>
  </div>
</Layout>

<script>
  if (typeof window !== "undefined") {
    const ids = [
      ...Array.from({ length: 14 }, (_, i) => `clothing${i + 1}`),
      ...Array.from({ length: 6 }, (_, i) => `sleep${i + 1}`),
      ...Array.from({ length: 13 }, (_, i) => `toiletries${i + 1}`),
      ...Array.from({ length: 14 }, (_, i) => `other${i + 1}`),
    ];
    ids.forEach((id) => {
      const el = document.getElementById(id);
      if (el && el instanceof HTMLInputElement) {
        // Restore state
        el.checked = sessionStorage.getItem(id) === "true";
        // Save state on change
        el.addEventListener("change", () => {
          sessionStorage.setItem(id, el.checked.toString());
        });
      }
    });
  }
</script>
