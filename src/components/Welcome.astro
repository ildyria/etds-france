<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    filter: blur(100px);
    opacity: 0.2;
  }

  #container {
    font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans",
      Arial, sans-serif;
    min-height: 100vh;
    padding-bottom: 4rem;
  }

  .logo {
    margin-bottom: 2rem;
  }

  .title {
    margin: 0;
    background: linear-gradient(
      164.5deg,
      var(--color-primary) 0%,
      var(--color-primary) 25%,
      #ffffff 50%,
      #ef4135 75%,
      #ef4135 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.5))
      drop-shadow(0 0 20px rgba(0, 0, 0, 0.3));
  }

  #links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  #links a {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    text-decoration: none;
    transition: all 0.3s;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
  }

  #links a.button {
    color: white;
    background: linear-gradient(135deg, var(--color-primary) 0%, #003d82 100%);
    box-shadow: 0 4px 15px rgba(0, 85, 164, 0.4);
  }

  #links a.button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 85, 164, 0.6);
  }

  #links a.button.secondary {
    background: linear-gradient(135deg, #ef4135 0%, #c7362d 100%);
    box-shadow: 0 4px 15px rgba(239, 65, 53, 0.4);
  }

  #links a.button.secondary:hover {
    box-shadow: 0 6px 20px rgba(239, 65, 53, 0.6);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .feature-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    padding: 2rem;
    border-radius: 16px;
    text-align: center;
    border: 2px solid transparent;
    background-image: linear-gradient(white, white),
      linear-gradient(
        135deg,
        var(--color-primary) 0%,
        #ffffff 50%,
        #ef4135 100%
      );
    background-origin: border-box;
    background-clip: padding-box, border-box;
    box-shadow: 0 4px 15px rgba(0, 85, 164, 0.1);
    transition:
      transform 0.3s,
      box-shadow 0.3s;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 85, 164, 0.2);
  }

  .feature-card .icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .feature-card p {
    font-size: 1rem;
    color: #6b7280;
    line-height: 1.6;
  }

  .box {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 16px;
    border: 1px solid white;
    max-width: 600px;
    text-align: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .box p {
    color: #4b5563;
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    #links {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
    }

    #links a.button {
      width: 100%;
      justify-content: center;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
