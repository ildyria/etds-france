<style>
  .site-banner {
    width: 100%;
    background: linear-gradient(90deg, #f59e42 0%, #ef4135 100%);
    color: #fff;
    text-align: center;
    font-weight: bold;
    font-size: 1.15rem;
    padding: 0.5em 0;
    letter-spacing: 0.05em;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  }
  /* Submenu styles */
  .nav-submenu {
    position: relative;
    display: inline-block;
  }
  .nav-submenu-toggle {
    cursor: pointer;
    background: none;
    border: none;
    font: inherit;
    color: #2563eb;
    padding: 0.5em 1em;
    transition: background 0.2s;
  }
  .nav-submenu-toggle:focus {
    outline: 2px solid #2563eb;
  }
  .nav-submenu-list {
    display: none;
    position: absolute;
    left: 0;
    top: 100%;
    min-width: 220px;
    background: #fff;
    border: 1px solid #e5e7eb;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    z-index: 10;
    border-radius: 0.5em;
    padding: 0.5em 0;
  }
  .nav-submenu.open .nav-submenu-list {
    display: block;
  }
  .nav-submenu-list a.nav-link {
    display: block;
    padding: 0.5em 1em;
    color: #222;
    text-decoration: none;
    font-weight: 500;
    border-radius: 0.25em;
    transition:
      background 0.2s,
      color 0.2s;
  }
  .nav-submenu-list a.nav-link:hover {
    background: #f3f4f6;
    color: #2563eb;
  }
  @media (hover: hover) and (pointer: fine) {
    .nav-submenu:hover .nav-submenu-list {
      display: block;
    }
    .nav-submenu:focus-within .nav-submenu-list {
      display: block;
    }
  }
  @media (max-width: 900px) {
    .nav-submenu-list {
      position: static;
      min-width: unset;
      box-shadow: none;
      border: none;
      background: transparent;
      padding: 0;
    }
    .nav-submenu.open .nav-submenu-list {
      display: block;
    }
    .nav-submenu-list a.nav-link {
      padding: 0.75em 1em;
      font-size: 1.1em;
    }
  }
