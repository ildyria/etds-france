    font-size: 1rem;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.3s;
    position: relative;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--color-primary) 0%, #ef4135 100%);
    transition: width 0.3s;
  }

  .nav-link:hover {
    color: var(--color-primary);
  }

  .nav-link:hover::after {
    width: 80%;
  }

  .nav-submenu-list .nav-link:hover::after { 
    width: 100%;
  }


  .mobile-menu-button {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .hamburger {
    display: block;
    width: 25px;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary) 0%, #ef4135 100%);
    border-radius: 2px;
    transition: all 0.3s;
  }

  .hamburger::before,
  .hamburger::after {
    content: "";
    display: block;
    width: 25px;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary) 0%, #ef4135 100%);
    border-radius: 2px;
    transition: all 0.3s;
  }

  .hamburger::before {
    transform: translateY(-8px);
  }

  .hamburger::after {
    transform: translateY(5px);
  }

  .mobile-nav {
    display: none;
    flex-direction: column;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.98);
    border-top: 1px solid rgba(0, 85, 164, 0.1);
    gap: 0.5rem;
    width: 100%;
  }

  .mobile-nav.active {
    display: flex;
  }

  .mobile-nav-link {
    color: #374151;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    padding: 1rem;
    border-radius: 8px;
    transition: all 0.3s;
    text-align: left;
  }

  .mobile-nav-submenu {
    width: 100%;
  }

  .mobile-nav-submenu-toggle {
    width: 100%;
    text-align: left;
    font-weight: 600;
    border: none;
    background: none;
    cursor: pointer;
    padding: 1rem;
    font-size: 1rem;
  }

  .mobile-nav-submenu-list {
    display: none;
    padding-left: 1rem;
    flex-direction: column;
    width: 100%;
  }

  .mobile-nav-submenu.open .mobile-nav-submenu-list {
    display: flex;
  }

  .mobile-nav-submenu-list .mobile-nav-link {
    width: 100%;
    display: block;
    padding: 0.75rem 1rem;
    text-align: left;
  }

  .mobile-nav-link:hover {
    background: rgba(0, 85, 164, 0.1);
    color: var(--color-primary);
  }

  @media screen and (max-width: 768px) {
    .nav {
      display: none;
    }

    .mobile-menu-button {
      display: flex;
    }

    .header-content {
      padding: 1rem;
    }
  }
</style>

<script>
  // Dropdown submenu reactivity
  document.addEventListener("DOMContentLoaded", () => {
    // Desktop submenus
    document.querySelectorAll(".nav-submenu").forEach(submenu => {
      const toggle = submenu.querySelector(".nav-submenu-toggle");
      if (toggle) {
        toggle.addEventListener("click", (e) => {
          e.preventDefault();
          submenu.classList.toggle("open");
          toggle.setAttribute(
            "aria-expanded",
            submenu.classList.contains("open") ? "true" : "false"
          );
        });
      }
    });

    // Mobile submenus
    document.querySelectorAll(".mobile-nav-submenu").forEach(submenu => {
      const toggle = submenu.querySelector(".mobile-nav-submenu-toggle");
      if (toggle) {
        toggle.addEventListener("click", (e) => {
          e.preventDefault();
          submenu.classList.toggle("open");
          const isOpen = submenu.classList.contains("open");
          toggle.setAttribute("aria-expanded", isOpen ? "true" : "false");
          // Close other submenus
          document.querySelectorAll(".mobile-nav-submenu").forEach(other => {
            if (other !== submenu) {
              other.classList.remove("open");
              const otherToggle = other.querySelector(".mobile-nav-submenu-toggle");
              if (otherToggle) {
                otherToggle.setAttribute("aria-expanded", "false");
              }
            }
          });
        });
      }
    });

    // Close submenus when clicking outside
    document.addEventListener("click", (e) => {
      const target = e.target as Node;
      document.querySelectorAll(".nav-submenu, .mobile-nav-submenu").forEach(submenu => {
        if (!submenu.contains(target)) {
          submenu.classList.remove("open");
          const toggle = submenu.querySelector(".nav-submenu-toggle, .mobile-nav-submenu-toggle");
          if (toggle) {
            toggle.setAttribute("aria-expanded", "false");
          }
        }
      });
    });

    // Mobile menu toggle
    const menuButton = document.querySelector(".mobile-menu-button");
    const mobileNav = document.querySelector(".mobile-nav");
    if (menuButton && mobileNav) {
      menuButton.addEventListener("click", () => {
        mobileNav.classList.toggle("active");
        // Close all submenus when closing mobile menu
        if (!mobileNav.classList.contains("active")) {
          document.querySelectorAll(".mobile-nav-submenu").forEach(submenu => {
            submenu.classList.remove("open");
            const toggle = submenu.querySelector(".mobile-nav-submenu-toggle");
            if (toggle) {
              toggle.setAttribute("aria-expanded", "false");
            }
          });
        }
      });

      // Close mobile menu when clicking a non-submenu link
      document.querySelectorAll(".mobile-nav-link:not(.mobile-nav-submenu-toggle)").forEach((link) => {
        link.addEventListener("click", () => {
          mobileNav.classList.remove("active");
        });
      });
    }
  });
</script>
