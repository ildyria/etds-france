---
const { title } = Astro.props;
---

<section class="content-section">
  <h2 class="section-title">{title}</h2>
  <div class="section-content">
    <slot />
  </div>
</section>
<style>
  .content-section {
    margin: 4rem 0;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin: 0 0 2rem;
    text-align: center;
  }

  @media screen and (max-width: 768px) {
    .section-title {
      font-size: 2rem;
    }
  }
    
</style>