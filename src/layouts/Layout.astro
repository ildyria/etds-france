<style is:global>
	* {
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		min-height: 100%;
		background: linear-gradient(135deg, #e8f0f7 0%, #ffffff 50%, #fceae9 100%);
	}
</style>
