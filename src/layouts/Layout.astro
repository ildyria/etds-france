import Header from '../components/Header.astro';
---
<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="ETDS France - Tournoi Européen pour les Étudiants Danseurs. Rejoignez-nous pour célébrer la passion de la danse avec des étudiants de toute l'Europe." />
